@import url('https://fonts.googleapis.com/css?family=Source+Code+Pro:400,200,700')

*
  margin 0
  padding 0
  box-sizing border-box

body
  font-family 'futura-pt', sans-serif

.header
  color #fff
  background-color #00ad27
  text-align center

  .page-title
    font-weight 200
    font-size 80px
    text-align center
    padding 100px 0 40px 0
    text-transform uppercase

  .subtitle
    font-weight 100
    padding 0 0 80px 0


.main-content
  margin 50px auto
  max-width 600px

  button
    display block
    width 100%
    height 300px
    background-color #7d55aa
    color #fff
    font-size 30px
    cursor pointer
    border 0
    border-radius 10px
    margin 50px auto

  button:hover
    background-color #6d459a

  p
    line-height 1.6
    margin-bottom 1.7em

.footer
  text-align: center
  margin 50px auto
  max-width 600px
  border-top 1px solid #444
  padding 20px 0

  p
    color #444
    font-size 12px
